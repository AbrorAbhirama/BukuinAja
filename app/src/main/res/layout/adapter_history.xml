<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/history_outcome"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Outcome"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/history_income"
                app:layout_constraintTop_toTopOf="@+id/history_product" />

            <TextView
                android:id="@+id/history_income"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Income"
                android:textAlignment="center"
                android:textColor="#63D500"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/history_date"
                app:layout_constraintTop_toTopOf="@+id/history_product" />

            <TextView
                android:id="@+id/history_date"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="12 Juni 2024"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/history_product"
                app:layout_constraintTop_toTopOf="@+id/history_product" />

            <TextView
                android:id="@+id/history_product"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Nama Barang"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>